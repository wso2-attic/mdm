							<input type="checkbox" data-group="policies" id="523A-hybrid_authentication" class="policy-input" data-true-val="true" data-false-val="false">
						</div>
					</div>

					<br />
					<div class="control-group">
						<label class="control-label">Prompt for Password</label>
						<div class="controls">
							<input type="checkbox" data-group="policies" id="523A-prompt_for_password" class="policy-input" data-true-val="true" data-false-val="false">
