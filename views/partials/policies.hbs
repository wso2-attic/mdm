							<input type="text" id="520A-outgoing_username" class="policy-input">
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Password</label>
						<div class="controls">
							<input type="password" id="520A-outgoing_password" class="policy-input">
						</div>
					</div>

					<br />
					<div class="control-group">
						<label class="control-label">Use SSL</label>
						<div class="controls">
							<input type="checkbox" data-group="policies" id="520A-outgoing_usedssl" class="policy-input" data-true-val="true" data-false-val="false" checked="checked">
						</div>
					</div>

					<!-- eMail Configurations End -->
				</div>
			</div>
		</div>

		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionPolicies" href="#collapse6">IPSec VPN Profile Configuration</a>
			</div>
			<div id="collapse6" class="accordion-body collapse">
				<div class="accordion-inner">
					<!-- VPN Configurations Start -->
					<div class="control-group">
						<label class="control-label">Display Name</label>
						<div class="controls">
							<input type="text" id="523A-display_name" class="policy-input">
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Authentication Method</label>
						<div class="controls">
							<select id="523A-type" class="policy-input">
								<option value="SharedSecret">Shared Secret</option><option value="Certificate">Certificate</option>
							</select>
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Domain Server</label>
						<div class="controls">
							<input type="text" id="523A-domain_server" class="policy-input">
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Group Name</label>
						<div class="controls">
							<input type="text" id="523A-group_name" class="policy-input">
