					<div class="control-group">
						<label class="control-label">Use SSL</label>
						<div class="controls">
							<input type="checkbox" data-group="policies" id="525A-usedssl" class="policy-input" data-true-val="true" data-false-val="false" checked="checked">
						</div>
					</div>

