						<label class="control-label">Allow Simple</label>
						<div class="controls">
							<input type="checkbox" data-group="policies" id="519A-allowSimple" class="policy-input" data-true-val="true" data-false-val="false" >
						</div>
					</div>

					<br />
					<div class="control-group">
						<label class="control-label">Require Alphanumeric</label>
						<div class="controls">
							<input type="checkbox" data-group="policies" id="519A-requireAlphanumeric" class="policy-input" data-true-val="true" data-false-val="false" >
						</div>
					</div>

					<!-- Poasscode Policy End -->
				</div>
			</div>
		</div>

		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionPolicies" href="#collapse5">eMail Configurations</a>
