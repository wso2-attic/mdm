						<div class="controls">
							<input type="password" id="520A-incoming_password" class="policy-input">
						</div>
					</div>

					<br />
					<div class="control-group">
						<label class="control-label">Use SSL</label>
						<div class="controls">
							<input type="checkbox" data-group="policies" id="520A-incoming_usedssl" class="policy-input" data-true-val="true" data-false-val="false" checked="checked">
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Outgoing Host</label>
						<div class="controls">
							<input type="text" id="520A-outgoing_hostname" class="policy-input">
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Outgoing Port</label>
						<div class="controls">
							<input type="text" id="520A-outgoing_portnumber" class="policy-input">
