<div class="container">

	<div class="raw-fluid">
		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Device Management
						</div>
						
							<div class="pull-right">
									<select name="featureList" id="featureList" class="dropdownimage" style="width:300px">
										<option value="">-- Select an operation to Apply --</option>
										{{#data.features}}{{#compare feature_type 'OPERATION'}}
										<option value="{{name}}" data-image="https://localhost:9443/mdm/themes/wso2sinine/img/features/{{name}}.png">{{description}}</option>
										{{/compare}}{{/data.features}}
									</select>

								</div>

					</div>
					
					
					

					<div class="block-body block-body container-fluid raw-fluid">

						<div class="raw-fluid">
							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputFirstName">Role</label>
									<div class="controls">
										<select class="multiselect" multiple="multiple" id="inputRoles" >
											{{#data.groups}}
												<option value="{{name}}">{{name}}</option>
											{{/data.groups}}
									 </select>
									</div>
								</div>
							</div>

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputLastName">Username</label>
									<div class="controls">
										<input type="text" id="inputUser" data-required="true">
									</div>
								</div>
							</div>

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputEmail">OS</label>
									<div class="controls">
										<select id="inputOS"  >
											<option value="null">--All--</option>
											<option value="1">Android</option>
											<option value="2">iOS</option>
										</select>
									</div>
								</div>
							</div>

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputPassword" >Ownsership</label>
									<div class="controls">
										<select id="inputOwnership">
											<option value="null">--All--</option>
											<option value="byod">BYOD</option>
											<option value="cope">Cope</option>
										</select>
									</div>
								</div>
							</div>
							
							
							<div class="span2 operation-filter">								
								<div class="control-group">
									<label class="control-label" for="inputPassword" >&nbsp;</label>
									<div class="controls">
										<a class="btn btn-orange" id="btn-find" href="#" ><i class="icon-search icon-white"></i> Find</a>
									</div>
								</div>
							</div>
							
							
						</div>		
												

						<div class="raw">

							<div class="span11">						

								<table cellpadding="0" cellspacing="0" border="0"
								class="table table-striped table-bordered" id="main-table">
									<thead>
										<tr>
											<th>Id</th>
											<th>IMEI</th>
											<th>Username</th>
											<th>Platform</th>
											<th>OS version</th>
											<th>Name</th>
											<th>Date</th>
										</tr>
									</thead>
									<tbody>

									</tbody>
								</table>

							</div>
						</div>

					</div>
				</div>
			</div>

		</div>

	</div>

</div>

